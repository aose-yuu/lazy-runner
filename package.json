{
  "name": "lazy-runner",
  "version": "1.0.0",
  "description": "Interactive CLI to select and run predefined commands",
  "main": "./dist/cli.cjs",
  "module": "./dist/cli.mjs",
  "type": "module",
  "types": "./dist/cli.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.cjs"
    }
  },
  "bin": {
    "lr": "./dist/cli.mjs"
  },
  "scripts": {
    "build": "unbuild",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "check": "biome check src",
    "changelog": "changelogen",
    "vitest": "vitest run",
    "test": "pnpm run check && pnpm run typecheck && pnpm run vitest"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "cac": "^6.7.14",
    "consola": "^3.4.2",
    "pkg-types": "^2.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.3",
    "@types/node": "^24.10.0",
    "changelogen": "^0.6.2",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.6"
  }
}
